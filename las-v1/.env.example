# ============================================================
# LAS (Local Agent System) - Environment Configuration
# ============================================================
# Copy this file to .env and fill in your values

# ==================== SERVER CONFIGURATION ====================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=7777
FRONTEND_PORT=3000

# ==================== LLM PROVIDER SETTINGS ====================
# Default provider: ollama, openai, anthropic, gemini, groq, openrouter
LAS_DEFAULT_PROVIDER=ollama
LAS_DEFAULT_MODEL=llama3.2

# Ollama (Local - No API key required)
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI
OPENAI_API_KEY=

# Anthropic (Claude)
ANTHROPIC_API_KEY=

# Google Gemini
GEMINI_API_KEY=

# Groq (Fast Inference)
GROQ_API_KEY=

# OpenRouter (Multi-provider)
OPENROUTER_API_KEY=

# Together AI
TOGETHER_API_KEY=

# HuggingFace
HUGGINGFACE_API_KEY=

# DeepSeek
DEEPSEEK_API_KEY=

# ==================== DATABASE ====================
POSTGRES_PASSWORD=las123
DATABASE_URL=postgresql://las:las123@localhost:5432/las

# Redis
REDIS_URL=redis://localhost:6379/0

# Qdrant Vector DB
QDRANT_URL=http://localhost:6333

# ==================== SEARCH ====================
SEARXNG_BASE_URL=http://localhost:8888

# ==================== SECURITY ====================
# JWT secret for API authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# API Key for backend access
API_KEY=las-api-key-change-in-production

# ==================== MONITORING ====================
GRAFANA_PASSWORD=admin123

# ==================== KONG API GATEWAY ====================
# Kong will proxy requests from port 8000 to backend port 7777
KONG_PROXY_PORT=8000
KONG_ADMIN_PORT=8001

# ==================== LITELLM SETTINGS ====================
LITELLM_TEMPERATURE=0.7
LITELLM_MAX_TOKENS=4096
LITELLM_ENABLE_CACHING=true
LITELLM_ENABLE_COST_TRACKING=true

# ==================== PRIVACY CLOAK ====================
PRIVACY_CLOAK_ENABLED=true
PRIVACY_USE_TOR=false
PRIVACY_USE_VPN=false
PROXY_SERVER=

# ==================== BROWSER AUTOMATION ====================
HEADLESS_BROWSER=true
STEALTH_MODE=true

# ==================== OBSERVABILITY ====================
# LangFuse (optional)
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=

# Helicone (optional)
HELICONE_API_KEY=
